<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controller.TrainingController">
    <GridPane fx:id="trainingGrid" hgap="5.0" vgap="5.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="70.0" />
    <Button fx:id="backButton" layoutX="10.0" layoutY="10.0" onAction="#backToHome" text="Back to Homepage" />

    <!-- Player 1 health bar and countdown -->
    <StackPane layoutX="50.0" layoutY="520.0">
        <ProgressBar fx:id="player1HealthBar" prefWidth="200.0" progress="1.0" />
        <Text fx:id="player1TimeText" style="-fx-font-size: 14; -fx-fill: black;" text="45" />
    </StackPane>
    <Text layoutX="50.0" layoutY="550.0" style="-fx-font-size: 16; -fx-fill: black;" text="Player 1" />
    <!-- Player 1 score -->
    <Text fx:id="player1Score" layoutX="270.0" layoutY="550.0" style="-fx-font-size: 16; -fx-fill: black;" text="Score: 0" />

    <!-- Player 2 health bar and countdown -->
    <StackPane layoutX="350.0" layoutY="520.0">
        <ProgressBar fx:id="player2HealthBar" prefWidth="200.0" progress="1.0" />
        <Text fx:id="player2TimeText" style="-fx-font-size: 14; -fx-fill: black;" text="45" />
    </StackPane>
    <Text layoutX="350.0" layoutY="550.0" style="-fx-font-size: 16; -fx-fill: black;" text="Player 2" />
    <!-- Player 2 score -->
    <Text fx:id="player2Score" layoutX="570.0" layoutY="550.0" style="-fx-font-size: 16; -fx-fill: black;" text="Score: 0" />

    <!-- Player 1 deck -->
    <HBox fx:id="player1Deck" alignment="CENTER" layoutX="50.0" layoutY="590.0" spacing="10.0" />

    <!-- Player 2 deck -->
    <HBox fx:id="player2Deck" alignment="CENTER" layoutX="350.0" layoutY="590.0" spacing="10.0" />

    <!-- Timer label for the countdown -->
    <Text fx:id="timerLabel" layoutX="350.0" layoutY="10.0" style="-fx-font-size: 16; -fx-fill: black;" />

    <Text fx:id="winnerMessage" layoutX="250.0" layoutY="250.0" style="-fx-font-size: 24; -fx-fill: orange;" visible="false" />
</AnchorPane>



